<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noumi.sms">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.chat.room.ChatRoomActivity"></activity>
        <activity
            android:name=".ui.tutors.detail.TutorDetailActivity"
            android:label="Tutor Details"
            android:parentActivityName=".ui.tutors.list.TutorListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tutors.profile.TutorProfileActivity"
            android:label="Tutor Profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.forgotpassword.ForgotPasswordActivity"
            android:label="Reset Password"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.students.list.StudentListActivity"
            android:label="Browse Students"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tutors.list.TutorListActivity"
            android:label="Browse Tutors"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signup.SignupActivity"
            android:label="Signup FindMyTutor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="Login FindMyTutor"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.tuition.list.TuitionsListActivity" />
        <activity android:name=".ui.students.profile.StudentProfileActivity" />
        <activity android:name=".ui.tuition.detail.TuitionDetailActivity" />
        <activity android:name=".ui.chat.list.ChatListActivity" />
    </application>

</manifest>