<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_container"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#00a695"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/message_body_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="Message Body"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/sender_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@id/message_body_view"
        android:text="Sender Name" />

    <TextView
        android:id="@+id/message_time_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_below="@id/message_body_view"
        android:layout_toRightOf="@id/sender_name_view"
        android:gravity="end"
        android:text="Message Time" />
</RelativeLayout>