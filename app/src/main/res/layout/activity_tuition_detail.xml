<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.tuition.detail.TuitionDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuition_thumb_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/thumb_tuition" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tutor_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutor Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tuition_acceptance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuition Acceptance Status: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/tuition_acceptance_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Accepted"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tuition_active_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuition Active Status: "
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/tuition_active_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tuition_rating_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating:" />

        <TextView
            android:id="@+id/tuition_rating_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tuition_comments_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments: " />

        <EditText
            android:id="@+id/tuition_comments_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Comments" />
    </LinearLayout>

    <Button
        android:id="@+id/tuition_chat_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat" />

    <Button
        android:id="@+id/update_tuition_rating_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Rating / Comments" />

    <Button
        android:id="@+id/leave_tuition_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Tuition" />
</LinearLayout>